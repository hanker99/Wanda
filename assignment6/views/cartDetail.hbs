<section class="px-4 py-5 w-100" style="background-color: #92d3d7; border-radius: .5rem .5rem 0 0;">
    <div class="row">
        <div class="col-12">
            <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-lg-8">
                            <div class="p-5">
                                <div class="d-flex justify-content-between align-items-center mb-5">
                                    <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                                    <h6 class="mb-0 text-muted">{{itemsCount}} items</h6>
                                </div>

                                <hr class="my-4">
                                {{#each cartItems}}
                                <div class="row mb-4 d-flex justify-content-between align-items-center">
                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="{{this.details.imageUrl}}"
                                            class="img-fluid rounded-3" alt="Cotton T-shirt">
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                        <h6 class="text-black mb-0">{{this.details.title}}</h6>
                                        <h6 class="text-muted">{{this.items.price}}</h6>
                                        
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-3 d-flex">
                                        <button class="btn btn-link px-2"
                                            onclick="updateCartItemQuantity(event, 'down')">
                                            <i class="fas fa-minus"></i>
                                        </button>

                                        <input id="form1" min="0" name="quantity" data-cartid="{{this._id}}" data-itemid="{{this.details._id}}" value="{{this.items.quantity}}" type="number"
                                            class="form-control form-control-sm">

                                        <button class="btn btn-link px-2"
                                            onclick="updateCartItemQuantity(event,'up')">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                        <h6 class="mb-0">{{this.items.total}}</h6>
                                    </div>
                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                        <i class="fas fa-times" onclick="deleteToCart(event)"  data-key="{{this.items.item_id}}" data-cartid="{{this._id}}"></i>
                                    </div>
                                </div>
                                {{/each}}

                                <div class="pt-5">
                                    <h6 class="mb-0"><a href="/" class="text-body">
                                        <i class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a>
                                    </h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 bg-grey">
                            <div class="p-5">
                                <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                                <hr class="my-4">

                                <div class="d-flex justify-content-between mb-4">
                                    <h5 class="text-uppercase">items {{itemsCount}}</h5>
                                </div>

                                <hr class="my-4">

                                <div class="d-flex justify-content-between mb-5">
                                    <h5 class="text-uppercase">Total price</h5>
                                    <h5>$ {{totalPrice}}</h5>
                                </div>

                                <button type="button" class="btn btn-dark btn-block btn-lg" onclick="orderPlace(event)"
                                    data-mdb-ripple-color="dark"">Place Order</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>