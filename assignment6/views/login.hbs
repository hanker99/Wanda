<div class="">
    <div>
        <div class="form-body">
            <div class="row">
                <div class="form-holder">
                    <div class="form-content">
                        <div class="form-items">
                            <h3>Login</h3>
                            <form class="requires-validation" novalidate method="POST"
                                onsubmit="loginFormSubmit(event)">
                                <div class="col-md-12">
                                    <div class="form-control-wrap">
                                        <input id="email" class="form-control" type="text" name="email"
                                            placeholder="E-mail Address" required>
                                        <div class="valid-feedback"></div>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-control-wrap">
                                        <input id="password" class="form-control" type="password" name="password" placeholder="Password"
                                            required>
                                        <div class="valid-feedback"></div>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="col-md-12 mt-3 pb-3">
                                    <div class="form-control-wrap">

                                        <label class=" mr-1" for="role" id="role">Login as: </label>

                                        <input type="radio" class="btn-check" name="role" value="1" id="clerk" autocomplete="off"
                                            required>
                                        <label class="btn btn-sm btn-outline-warning" for="clerk">Data Entry Clerk</label>

                                        <input type="radio" class="btn-check" name="role"  value="2" id="customer"
                                            autocomplete="off" required>
                                        <label class="btn btn-sm btn-outline-warning" for="customer">Customer</label>
                                        <div class="valid-feedback mv-up pt-2">You selected a Role!</div>
                                        <div class="invalid-feedback mv-up pt-2">Please select a Role!</div>
                                    </div>
                                </div>

                                <div class="form-button ">
                                    <button id="submit" type="submit" class="btn btn-warning">Login</button>
                                </div>
                                <div id="form-error" class="pt-2 text-center" style="color: red;">
                                </div>
                                <div class="">
                                    <span class="text-white">Need an account ?</span> <a href="/signup"
                                        class="text-muted">Sign Up </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>